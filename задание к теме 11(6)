#include <iostream>
using namespace std;
int main()
{
    setlocale(LC_ALL, "Russian");
    int V;
    cout << "Введите целое число в диапазоне 1–999" << endl;
    cin >> V;
    if ((V < 10) && (V % 2 == 0)) { cout << "Четное однозначное число" << endl; }
    if ((V < 10) && (V % 2 != 0)) { cout << "Нечетное однозначное число" << endl; }
    if ((V > 9) && (V < 100) && (V % 2 == 0)) { cout << "Четное двузначное число" << endl; }
    if ((V > 9) && (V < 100) && (V % 2 != 0)) { cout << "Нечетное двузначное число" << endl; }
    if ((V > 99) && (V % 2 == 0)) { cout << "Четное трехзначное число" << endl; }
    if ((V > 99) && (V % 2 != 0)) { cout << "Нечетное трехзначное число" << endl; }
    return 0;
}
