#include <iostream>
using namespace std;
int main()
{
	setlocale(LC_ALL, "Rus");
	float x1, x2, y1, y2, P, S;
	cout << "Введите координаты двух противоположных вершин прямоугольника" << endl;
	cout << "x1, y1, x2, y2" << endl;
	cin >> x1 >> y1 >> x2 >> y2;
	P = 2 * (abs(x1 - x2) + abs(y1 - y2));
	S = abs(x1 - x2) * abs(y1 - y2);
	cout << "периметр прямоугольника равен " << P << endl;
	cout << "площадь прямоугольника равна " << S << endl;
	return 0;
}
