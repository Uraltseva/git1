#include<iostream>
using namespace std;
int main()
{
	setlocale(LC_ALL, "Rus");
	int v, w, v1, v2, v3;
    cout << "Введите трехзначное число" << endl;
    cin >> v;
    v1 = v / 100;
    v2 = (v - v1 * 100) / 10;
    v3 = v - v1 * 100 - v2 * 10;
    w = v2 * 100 + v3 * 10 + v1;
    cout << "Полученное число " << w << endl;
	return 0;
}
