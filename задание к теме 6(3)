#include <iostream>
using namespace std;
int main()
{
	setlocale(LC_ALL, "Rus");
	float A, B, C, P, W;
	cout << "Введите значение переменных A, B, C " << endl;
	cout << "A" << "B" << "C ";
	cin >> A >> B >> C;
	P = C;
	C = A;
	W = B;
	B = P;
	A = W;
	cout << "значение переменной A равно " << A << endl;
	cout << "значение переменной B равно " << B << endl;
	cout << "значение переменной C равно " << C << endl;
	return 0;
}
