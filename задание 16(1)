#include <iostream>
using namespace std;
int main()
{
    {
        setlocale(LC_ALL, "Rus");

        int N;
        cout << "Введите размер массива" << endl;
        cin >> N;
        int* array = new int[N];
        for (int i = 0; i < N; i++) {
            array[i] = (i * 2) + 1;
            cout << array[i] << " ";
        }
    }
    return 0;
}
