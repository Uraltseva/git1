#include <iostream>
using namespace std;
int main()
{
	setlocale(LC_ALL, "Rus");
	int ab[1000];
	int n1, i1;
	cout << "Введите размер массива.";
	cin >> n1;
	for (i1 = 0; i1 < n1; i1++)
	{
		ab[i1] = i1 + 1;
	}
	for (i1 = 0; i1 < n1; i1++)
	{
		if (i1 % 2 == 0)
		{
			cout << ab[i1] << " ";
		}
		else if (i1 % 2 == 0)
		{
			cout << "";
		}

	}
	cout << "\n";
	for (i1 = n1 - 1; i1 >= 0; i1--)
	{
		if (i1 % 2 != 0)
		{
			cout << ab[i1] << " ";
		}
		else if (i1 % 2 != 0)
		{
			cout << " ";
		}
	}
	return 0;
}
