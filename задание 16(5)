#include <iostream>
using namespace std;
int main()
{
    {
        setlocale(LC_ALL, "Russian");

        int n;
        cout << "Введите размер массива." << endl;
        cin >> n;
        int* mas = new int[n];
        cout << "Введите элементы массива." << endl;
        for (int j = 0; j < n; j++) {
            cin >> mas[j];
        }

        for (int i = 1; i < n; i += 2) { cout << mas[i] << " "; }
        for (int i = n - 1; i > -1; i -= 2) { cout << mas[i] << " "; }
        cout << " " << endl;
        cout << " " << endl; }

    return 0;
}
