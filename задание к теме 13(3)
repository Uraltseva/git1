#include <iostream>
using namespace std;
int main()
{
    setlocale(LC_ALL, "Rus");
    int N, i;
    float s(0), a(1.1);
    cout << "Введите целое положительное число" << endl;
    cin >> N;
    for (i = 1; i < 2 * N; i = i + 2) {
        s = s + i;
        cout << s << endl;
    }
    cout << "Квадрат этого числа равен " << s << endl;
    return 0;
}
