#include <iostream>
using namespace std;
int main()
{
    setlocale(LC_ALL, "Rus");
    float a, b;
    cout << "Введите стоимость 1 кг конфет" << endl;
    cin >> a;
    cout << "Стоимость конфет" << endl;
    for (b = 0.1; b < 1.1; b += 0.1)
        cout << b << " Стоимость кг конфет = " << a * b << endl;   
        return 0;
}
